<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/payout_layout"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@color/payout_table_column_color"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/order_date"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="11dp" />

        <View
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:background="@color/payout_vertical_divider" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:src="@drawable/product_price_icon" />

            <TextView
                android:id="@+id/payout_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:gravity="center"
                android:text="20"
                android:textColor="@color/black"
                android:textSize="13dp" />
        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:background="@color/payout_vertical_divider" />

        <TextView
            android:id="@+id/mode_of_payment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Mode of Payment"
            android:textColor="@color/black"
            android:textSize="11dp" />

        <View
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:background="@color/payout_vertical_divider" />

        <TextView
            android:id="@+id/payout_ref"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Payout Ref."
            android:textColor="@color/black"
            android:textSize="11dp" />
    </LinearLayout>

</LinearLayout>