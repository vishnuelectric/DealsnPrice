<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/offer_border" >
    <RelativeLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        
        android:layout_marginTop="3dp"
        android:layout_marginBottom="4dp"
        >
        <ImageView 
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:src="@drawable/logo"
            android:layout_marginLeft="6dp"
            android:id="@+id/shop_image"
            android:scaleType="fitXY"
            />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:src="@drawable/share_icon"
            android:id="@+id/share_icon"
            android:layout_toRightOf="@+id/shop_image"
            android:layout_marginLeft="9dp"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textSize="12dp"
            android:textColor="@color/tab_text_color"
            android:layout_below="@+id/shop_image"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/shop_detail"
            />
        
    </RelativeLayout>
	<LinearLayout 
	    android:layout_width="100dp"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_marginRight="8dp"
	    android:layout_marginTop="8dp"
	    android:gravity="right"
	    >
	    <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="15dp"
	        android:src="@drawable/more_detail"
	        android:id="@+id/more_detail"
	        android:layout_marginTop="10dp"
	        android:layout_marginBottom="10dp"
	        android:scaleType="fitXY"
	        />
	    
	     <TextView 
	        android:layout_width="100dp"
	        android:layout_height="30dp"
	        android:text="Shop Now"
	        android:textSize="17dp"
	        android:textColor="@color/white"
	        android:layout_marginTop="20dp"
	        android:gravity="center"
	        android:id="@+id/shop_now"
	        android:background="@drawable/submit_btn"
	        android:layout_marginBottom="15dp"
	        />
	    
	    
	    
	</LinearLayout>
</LinearLayout>
