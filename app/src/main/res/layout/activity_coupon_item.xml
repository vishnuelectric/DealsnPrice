<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
<LinearLayout 
    android:layout_width="130dp"
    android:layout_height="160dp"
    android:orientation="vertical"
    android:background="@drawable/white_border"
    android:minWidth="110dp"
    android:minHeight="110dp"
    android:gravity="center"
    android:layout_margin="5dp"
    >
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:gravity="center"
        >
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fb_icon"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/store_image"
        />
    </LinearLayout>
    <View
		android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:background="@color/deal_coupon_view_color"
		 />
    	<TextView 
    	    android:layout_width="110dp"
    	    android:layout_height="50dp"
    	    android:text="Coupon Details"
    	    android:textSize="10dp"
    	    android:textColor="@color/black"
    	    android:layout_marginLeft="5dp"
    	    android:layout_marginRight="5dp"
    	    android:layout_marginTop="15dp"
    	    android:gravity="center"
    	    android:layout_marginBottom="8dp"
    	    android:id="@+id/coupon_detail"
    	    />
    	
    	<LinearLayout 
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:orientation="vertical"
    	    android:gravity="center"
    	    android:id="@+id/get_code_layout"
    	    >
    	    <TextView 
    	        android:layout_width="50dp"
    	        android:layout_height="wrap_content"
    	        android:text="Get Code"
    	        android:textSize="12dp"
    	        android:textColor="@color/get_code_color"
    	        
    	        />
    	    <View 
    	        android:layout_width="50dp"
    	        android:layout_height="1dp"
    	        android:background="@color/get_code_color"
    	        />	
    	    
    	</LinearLayout>
    
</LinearLayout>    

</LinearLayout>
