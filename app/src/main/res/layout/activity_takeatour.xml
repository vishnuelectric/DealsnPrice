<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/slid1"
    >

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager_taketour"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/dots_parentLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:gravity="center|bottom"
        android:orientation="horizontal"
        android:weightSum="10.0" >

        <TextView
            android:id="@+id/takeTour_skipBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.40"
            android:gravity="center|left"
            android:text="@string/skip"
            android:onClick="handleOnClick"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4.5"
            android:gravity="center"
            android:orientation="horizontal" >
            
            <ImageView
                android:id="@+id/dot1IV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/dot_selected" />

            <ImageView
                android:id="@+id/dot2IV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/dot_unselected" />

            <ImageView
                android:id="@+id/dot3IV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/dot_unselected" />

            <ImageView
                android:id="@+id/dot4IV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/dot_unselected" />

            <ImageView
                android:id="@+id/dot5IV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/dot_unselected" />

        </LinearLayout>

        <TextView
            android:id="@+id/takeTour_nextBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.40"
            android:gravity="center|right"
            android:text="@string/next"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>