<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_color" >
    <HorizontalScrollView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:id="@+id/horizontal_id"
        android:scrollbars="none"
        >
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@color/tab_header_bg"
            >
            <LinearLayout 
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:id="@+id/offer_layout"
                >
                <ImageView 
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/offers_icon"
                    android:layout_marginTop="6dp"
                    android:layout_gravity="center"
                    />
                
                
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Offers"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:minHeight="50dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            </LinearLayout>
            <View 
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:background="@drawable/gap_line"
                />
            <LinearLayout 
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:id="@+id/shopearn_layout"
                >
            <ImageView 
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/shop_icon"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHOP EARN"
                android:id="@+id/shopearn_text"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:minHeight="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                />
            </LinearLayout>
            <View 
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:background="@drawable/gap_line"
                />
            <LinearLayout 
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:id="@+id/pricecomparison_layout"
                >
            <ImageView 
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/price_icon"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price Comparison"
                android:id="@+id/pricecomparison_text"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:minHeight="50dp"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            </LinearLayout>
            <!-- <View 
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:background="@drawable/gap_line"
                /> -->
            <LinearLayout 
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:id="@+id/dealprice_layout"
                android:background="@color/active_stripe_tab_bg"
                >
            <ImageView 
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/deals_icon"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deals Coupons"
                android:id="@+id/dealprice_text"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:minHeight="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                />
            </LinearLayout>
            <!-- <View 
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:background="@drawable/gap_line"
                /> -->
             <LinearLayout 
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:id="@+id/referearn_layout"
                >
            <ImageView 
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/refer_icon"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                />
                 
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refer Earn"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:minHeight="50dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/couponprice_text"
                android:layout_gravity="center"
                android:gravity="center"
                />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center"
        >
        <TextView 
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="MOBILES"
            android:textSize="19dp"
            android:textColor="@color/text_rs_color"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:id="@+id/header_id"
            />
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:background="@drawable/deal_border"
            >
            <LinearLayout 
                android:layout_width="80dp"
                android:layout_height="fill_parent"
                 android:background="#1fa9cb"
                 android:gravity="center"
                 android:id="@+id/deal_layout"
                >
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DEALS"
                android:textSize="14dp"
                android:id="@+id/deals_id"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
               android:gravity="center_vertical"
                />
            </LinearLayout> 
            <TextView 
                android:layout_width="80dp"
                android:layout_height="fill_parent"
                android:text="COUPONS"
                android:textSize="14dp"
                android:textColor="@color/gray"
                android:id="@+id/coupons_id"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                />
        </LinearLayout>
        
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="@drawable/white_border"
        >
        <GridView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:id="@+id/deal_grid"
            android:stretchMode="columnWidth"
            android:numColumns="auto_fit"
            ></GridView>
        
        
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/footer_layout"
        ></LinearLayout>
    

</LinearLayout>
