<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >
    <HorizontalScrollView 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:id="@+id/horizontal_id"
        android:scrollbars="none"
        >
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@color/tab_header_bg"
            >
            <LinearLayout 
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:id="@+id/offer_layout"
                >
                <ImageView 
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/offers_icon"
                    android:layout_marginTop="6dp"
                    android:layout_gravity="center"
                    />
                
                
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Offers"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:minHeight="50dp"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            </LinearLayout>
            <View 
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:background="@drawable/gap_line"
                />
            <LinearLayout 
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:id="@+id/shopearn_layout"
                >
            <ImageView 
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/shop_icon"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHOP EARN"
                android:id="@+id/shopearn_text"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:minHeight="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                />
            </LinearLayout>
            <View 
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:background="@drawable/gap_line"
                />
            <LinearLayout 
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:id="@+id/pricecomparison_layout"
                >
            <ImageView 
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/price_icon"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price Comparison"
                android:id="@+id/pricecomparison_text"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:minHeight="50dp"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            </LinearLayout>
            <View 
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:background="@drawable/gap_line"
                />
            <LinearLayout 
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:id="@+id/dealprice_layout"
                >
            <ImageView 
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/deals_icon"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deals Coupons"
                android:id="@+id/dealprice_text"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:minHeight="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                />
            </LinearLayout>
            <View 
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:background="@drawable/gap_line"
                />
             <LinearLayout 
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:orientation="vertical"
                android:id="@+id/referearn_layout"
                >
            <ImageView 
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/refer_icon"
                android:layout_gravity="center"
                android:layout_marginTop="6dp"
                />
                 
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refer Earn"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:minHeight="50dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/couponprice_text"
                android:layout_gravity="center"
                android:gravity="center"
                />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:orientation="vertical"
	    android:background="@drawable/take_a_tour_bg"
	    
	    >
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            >
	    
	    <com.dnp.data.ExtendedGallery
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
             />
		<LinearLayout
                android:id="@+id/image_count"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:gravity="center|center_vertical"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                >
            </LinearLayout>
	    </LinearLayout>
	    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:gravity="center"
            android:id="@+id/skip_layout"
            >
            <TextView 
                android:layout_width="34dp"
                android:layout_height="wrap_content"
                android:text="Skip"
                android:textSize="15dp"
                android:textColor="@color/white"
                />
            <View 
                android:layout_width="33dp"
                android:layout_height="1dp"
                android:background="@color/white"
                />
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:id="@+id/next_layout"
            >
            <TextView 
                android:layout_width="34dp"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textSize="15dp"
                android:textColor="@color/white"
                />
            <View 
                android:layout_width="33dp"
                android:layout_height="1dp"
                android:background="@color/white"
                />
            
        </LinearLayout>
        
    </RelativeLayout>
    
	    
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:id="@+id/footer_layout"
	    ></LinearLayout>
</LinearLayout>
