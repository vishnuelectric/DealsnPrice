<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:gravity="center"
    android:orientation="vertical" >

    <HorizontalScrollView
        android:id="@+id/horizontal_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none" >

          <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@color/tab_header_bg"
            >
            <LinearLayout 
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:id="@+id/overview_layout"
                android:gravity="center"
                
                >
                
                
                
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Overview"
                android:textSize="11dp"
                android:textColor="@color/white"
                android:minHeight="30dp"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            </LinearLayout>
            <View 
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@drawable/gap_line"
                />
            <LinearLayout 
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:id="@+id/order_status_layout"
                >
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Status"
                android:id="@+id/shopearn_text"
                android:textSize="11dp"
                android:textColor="@color/white"
                android:minHeight="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                />
            </LinearLayout>
            <View 
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@drawable/gap_line"
                />
            <LinearLayout 
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:id="@+id/approved_cashback_layout"
                android:gravity="center"
                >
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payout Status"
                android:id="@+id/pricecomparison_text"
                android:textSize="11dp"
                android:textColor="@color/white"
                android:minHeight="40dp"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            </LinearLayout>
            <View 
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@drawable/gap_line"
                />
            <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:orientation="vertical"
                android:id="@+id/payout_status_layout"
                android:gravity="center"
                android:background="@color/active_stripe_tab_bg"
                >
            
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Missing CashBack"
                android:id="@+id/dealprice_text"
                android:textSize="11dp"
                android:textColor="@color/white"
                android:minHeight="40dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                />
            </LinearLayout>
            <View 
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@drawable/gap_line"
                />
             <!-- <LinearLayout 
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:orientation="vertical"
                android:id="@+id/missing_cashback_layout"
                >
            
                 
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Missing CashBack"
                android:textSize="12dp"
                android:textColor="@color/white"
                android:minHeight="50dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/couponprice_text"
                android:layout_gravity="center"
                
                android:gravity="center"
                />
            </LinearLayout> -->
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:background="@drawable/white_without_border"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="85dp"
            android:background="@color/cashback_bg" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/cashback_rounded_shape"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/redeemable"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/rs_icon" />

                    <TextView
                        android:id="@+id/total_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/recharge_layout"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/recharge_rounded_border"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="Recharge Now"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/arrow_sign" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bank_layout"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/recharge_layout"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/recharge_rounded_border"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:text="Bank Transfer"
                    android:textColor="@color/white"
                    android:textSize="12dp" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/arrow_sign" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical" >

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scrollbars="none" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/deal_border"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:id="@+id/offer_layout"
                            android:layout_width="130dp"
                            android:layout_height="fill_parent"
                            android:background="#1fa9cb"
                            android:gravity="center" >

                            <TextView
                                android:id="@+id/deal_id"
                                android:layout_width="120dp"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:gravity="center"
                                android:text="OFFER CASHBACK"
                                android:textColor="@color/white"
                                android:textSize="10dp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/shopping_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center_vertical"
                            android:text="SHOPPING CASHBACK"
                            android:textColor="@color/gray"
                            android:textSize="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="Date"
                                android:textColor="@color/black"
                                android:textSize="12dp" />

                            <LinearLayout
                                android:id="@+id/date_layout"
                                android:layout_width="140dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/white_border"
                                android:gravity="center"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/date"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text=""
                                    android:textColor="@color/black" />

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="5dp"
                                    android:src="@drawable/drop_arrow" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:minWidth="300dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="CashBack Amount (Rs.) "
                                android:textColor="@color/black"
                                android:textSize="12dp" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="25dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/white_border"
                                android:orientation="vertical" >

                                <EditText
                                    android:id="@+id/amount"
                                    android:layout_width="140dp"
                                    android:layout_height="25dp"
                                    android:background="#00000000"
                                    android:inputType="numberDecimal"
                                    android:minWidth="100dp"
                                    android:paddingLeft="5dp"
                                    android:singleLine="true"
                                    android:textColor="@color/gray"
                                    android:textSize="12dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:minWidth="300dp"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="140dp"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="Offer Title"
                                android:textColor="@color/black"
                                android:textSize="12dp" />

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="25dp"
                                android:layout_marginLeft="5dp"
                                android:background="@drawable/white_border"
                                android:orientation="vertical" >

                                <EditText
                                    android:id="@+id/offer_title"
                                    android:layout_width="140dp"
                                    android:layout_height="25dp"
                                    android:background="#00000000"
                                    android:minWidth="100dp"
                                    android:paddingLeft="5dp"
                                    android:singleLine="true"
                                    android:textColor="@color/gray"
                                    android:textSize="12dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:minWidth="300dp"
                            android:orientation="horizontal" >
                        </LinearLayout>

                        <Button
                            android:id="@+id/missing_submit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/btn"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:text="Submit"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:background="@color/payout_table_column_color"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Date"
                                android:textColor="@color/black"
                                android:textSize="11dp" />

                            <View
                                android:layout_width="2dp"
                                android:layout_height="fill_parent"
                                android:background="#d5d5d5" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_horizontal"
                                android:text="CashBack Amount(Rs.)"
                                android:textColor="@color/black"
                                android:textSize="11dp" />

                            <View
                                android:layout_width="2dp"
                                android:layout_height="fill_parent"
                                android:background="#d5d5d5" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Offer Title"
                                android:textColor="@color/black"
                                android:textSize="11dp" />
                        </LinearLayout>

                        <ListView
                            android:id="@+id/missing_list"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1" >
                        </ListView>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/more_missing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="MORE"
        android:textColor="@color/text_rs_color"
        android:textSize="15dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/footer_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

